// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "EB corbos Linux SDK 1.2.1",
	"image": "linux.elektrobit.com/ebcl/sdk:testing",
	"initializeCommand": "${PWD}/init_workspace",
	"postCreateCommand": "${PWD}/tools/init_container",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"files.insertFinalNewline": true,
				"[makefile]": {
					"editor.insertSpaces": false,
					"editor.detectIndentation": false
				}
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-vscode.makefile-tools",
				"ms-vscode.cpptools-extension-pack",
				"ms-python.python",
				"robocorp.robotframework-lsp",
				"ms-python.autopep8",
				"ms-python.pylint",
				"ms-python.mypy-type-checker",
				"WolfiesHorizon.python-auto-venv",
				"donjayamanne.python-environment-manager"
			]
		}
	},
	"remoteUser": "ebcl",
	"privileged": true,
	"mounts": [
		{
			"source": "ebcl-build-boxes",
			"target": "/home/ebcl/.kiwi_boxes",
			"type": "volume"
		},
		{
			"source": "${localEnv:HOME}${localEnv:USERPROFILE}/.ssh",
			"target": "/home/ebcl/.ssh",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/results/images",
			"target": "/build/results/images",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/results/packages",
			"target": "/build/results/packages",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/results/apps",
			"target": "/build/results/apps",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/images",
			"target": "/build/images",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/identity",
			"target": "/build/identity",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/sysroot_x86_64",
			"target": "/build/sysroot_x86_64",
			"type": "bind"
		},
		{
			"source": "${localWorkspaceFolder}/sysroot_aarch64",
			"target": "/build/sysroot_aarch64",
			"type": "bind"
		},
		{
			"source": "/dev",
			"target": "/dev",
			"type": "bind"
		}
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
	"workspaceFolder": "/workspace"
}
